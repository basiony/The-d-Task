<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Description">

    <ImageView android:layout_width="409dp" android:layout_height="285dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="10dp"
               android:layout_marginEnd="10dp" android:id="@+id/imageViewItem"/>
    <TextView
            android:text="Item Description"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            app:layout_constraintTop_toBottomOf="@+id/imageViewItem" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    <TextView
            android:text="textViewDescription"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="401dp"
            android:layout_height="376dp"
            android:id="@+id/textViewDescription" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>